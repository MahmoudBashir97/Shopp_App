<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.ProductDetails_Fragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:id="@+id/rel_bar"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:padding="5dp"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_arrow_right_alt_24"
                        android:rotation="180"
                        app:tint="@color/main_txt_color" />

                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_baseline_search_24"
                        app:tint="@color/main_txt_color"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/women_cat_pic"
                    android:layout_below="@+id/rel_bar" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_below="@+id/rel_bar">

                </androidx.viewpager2.widget.ViewPager2>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@+id/viewpager"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Black turtleneck top"
                        android:textColor="@color/main_txt_color"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="15dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$42"
                            android:textColor="@color/price_txt_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/txt_previous_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$62"
                            android:textColor="@color/main_txt_color"
                            android:textSize="17sp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E1E1E1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <RelativeLayout
                            android:layout_width="65dp"
                            android:layout_height="35dp"
                            android:background="@drawable/rating_back"
                            android:layout_gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="18sp"
                                android:textColor="@color/white"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/very_good_txt"
                            android:textSize="20sp"
                            android:textColor="@color/main_txt_color"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="49 Reviews"
                            android:textSize="16sp"
                            android:textColor="#667EEA"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="15dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E1E1E1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description_txt"
                        android:textSize="20sp"
                        android:textColor="@color/main_txt_color"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp" />

                    <com.borjabravo.readmoretextview.ReadMoreTextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A wonderful serenity has taken possession of my entire soul, like these sweet mornings of spring which I enjoy with my whole heart. I am alone, and feel the charm of existence in this spot, which was created for the bliss of souls like mine."
                        android:textSize="17sp"
                        android:textColor="#656565"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:trimExpandedText=" More"
                        app:trimCollapsedText="Less"
                        app:trimMode="trimModeLine"
                        app:trimLength="3"
                        android:inputType="textMultiLine"
                        app:colorClickableText="#667EEA" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E1E1E1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/select_size_txt"
                                android:button="@color/radio_flat_text_selector_size"
                                android:textSize="18sp"
                                android:checked="true"
                                android:textColor="@color/radio_flat_text_selector_selection" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/select_color_txt"
                                android:button="@color/radio_flat_text_selector_size"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:textSize="18sp"
                                android:textColor="@color/radio_flat_text_selector_selection" />
                        </RadioGroup>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E1E1E1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_marginBottom="20dp">

                        <RadioGroup
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true">

                            <RadioButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:text="S"
                                android:button="@color/radio_flat_text_selector_size"
                                android:textSize="18sp"
                                android:checked="true"
                                android:background="@drawable/radio_flat_selector"
                                android:gravity="center"
                                android:textColor="@color/radio_flat_text_selector_size" />

                            <RadioButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:text="M"
                                android:button="@color/radio_flat_text_selector_size"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:textSize="18sp"
                                android:background="@drawable/radio_flat_selector"
                                android:textColor="@color/radio_flat_text_selector_size" />

                            <RadioButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:text="L"
                                android:button="@color/radio_flat_text_selector_size"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:checked="true"
                                android:background="@drawable/radio_flat_selector"
                                android:textColor="@color/radio_flat_text_selector_size" />

                            <RadioButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:text="XXL"
                                android:button="@color/radio_flat_text_selector_size"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:checked="true"
                                android:background="@drawable/radio_flat_selector"
                                android:textColor="@color/radio_flat_text_selector_size" />
                        </RadioGroup>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="2">

            <Button
                android:id="@+id/add_to_cart_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#E1E1E1"
                android:text="ADD TO CART"
                android:textSize="18sp"
                android:textColor="@color/main_txt_color" />

            <Button
                android:id="@+id/buy_now_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#667EEA"
                android:text="BUY NOW"
                android:textSize="18sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</layout>